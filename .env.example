# ComfyUI Docker Manager - Environment Configuration
#
# Copy this file to .env and adjust settings as needed.

# =============================================================================
# CONTAINER SETTINGS
# =============================================================================

# Name of the ComfyUI Docker container to manage
COMFYUI_CONTAINER_NAME=comfyui

# ComfyUI network hostname (usually the container name)
COMFYUI_HOST=comfyui

# ComfyUI web UI port (default: 8188)
COMFYUI_PORT=8188

# =============================================================================
# IDLE DETECTION SETTINGS
# =============================================================================

# Minutes of inactivity before stopping the container
IDLE_TIMEOUT_MINUTES=30

# How often to poll the ComfyUI queue (in seconds)
POLL_INTERVAL_SECONDS=30

# =============================================================================
# AUTO-START SETTINGS
# =============================================================================

# Enable automatic container start when accessed (true/false)
AUTO_START_ENABLED=true

# Maximum seconds to wait for container to start
STARTUP_TIMEOUT_SECONDS=120

# =============================================================================
# MANAGER SETTINGS
# =============================================================================

# Port for the manager web UI
MANAGER_PORT=8080
